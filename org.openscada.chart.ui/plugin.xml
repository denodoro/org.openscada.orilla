<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.chart.ui.PerspectiveFactory"
            icon="icons/chartView.gif"
            id="org.openscada.chart.ui.perspective"
            name="Chart">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.chart.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.chart.ui.perspective">
         <view
               id="org.openscada.core.ui.connection.ConnectionView"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.openscada.ui.chart.ChartView"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.openscada.ui.chart.ChartController"
               minimized="false"
               ratio="0.75"
               relationship="bottom"
               relative="org.openscada.ui.chart.ChartView">
         </view>
         <view
               id="org.openscada.ui.chart.ChartConfigurator"
               minimized="false"
               relationship="stack"
               relative="org.openscada.ui.chart.ChartController">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               ratio="0"
               relationship="bottom"
               relative="org.openscada.core.ui.connection.ConnectionView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openscada.chart.ui"
            name="openSCADA Chart">
      </category>
   </extension>

</plugin>
