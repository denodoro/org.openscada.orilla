<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.hd.ui.perspectives.PerspectiveFactory"
            icon="icons/perspective.gif"
            id="org.openscada.hd.ui.perspective"
            name="%perspective.hd.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.hd.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.hd.ui.perspective">
         <view
               closeable="true"
               id="org.openscada.core.ui.connection.ConnectionView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.TrendView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="right"
               relative="org.openscada.core.ui.connection.ConnectionView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryDataView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.openscada.hd.ui.TrendView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryControlView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="bottom"
               relative="org.openscada.core.ui.connection.ConnectionView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryControlView"
            id="org.openscada.hd.ui.QueryControlView"
            name="%view.queryControl.name"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryDataView"
            id="org.openscada.hd.ui.QueryDataView"
            name="%view.queryData.name"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.TrendView"
            id="org.openscada.hd.ui.TrendView"
            name="%view.trendView.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
   </extension>

</plugin>
