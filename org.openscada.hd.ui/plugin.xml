<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.hd.ui.perspectives.PerspectiveFactory"
            icon="icons/perspective.gif"
            id="org.openscada.hd.ui.perspective"
            name="%perspective.hd.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.hd.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.hd.ui.perspective">
         <view
               closeable="true"
               id="org.openscada.core.ui.connection.ConnectionView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.TrendView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="right"
               relative="org.openscada.core.ui.connection.ConnectionView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryDataView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.openscada.hd.ui.TrendView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryControlView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="bottom"
               relative="org.openscada.core.ui.connection.ConnectionView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryControlView"
            id="org.openscada.hd.ui.QueryControlView"
            name="%view.queryControl.name"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryDataView"
            id="org.openscada.hd.ui.QueryDataView"
            name="%view.queryData.name"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.SelectionTrendView"
            id="org.openscada.hd.ui.TrendView"
            name="%view.trendView.name"
            restorable="true">
         <description>
            A trend view that follows the currently selected query.
         </description>
      </view>
      <view
            allowMultiple="true"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.ManagingTrendView"
            id="org.openscada.hd.ui.ManagingTrendView"
            name="%view.trendView.name"
            restorable="false">
         <description>
            A trend view that manages only his provided query and closes the query at the end of using the query.
         </description>
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.openscada.hd.ui.category"
            name="%category.hd.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.openscada.hd.ui.category"
            id="org.openscada.hd.ui.createManagedTrendView"
            name="Create Managed Trend View">
         <commandParameter
               id="org.openscada.hd.ui.connectionId"
               name="Connection ID"
               optional="false">
         </commandParameter>
         <commandParameter
               id="org.openscada.hd.ui.storageName"
               name="Storage Name"
               optional="false">
         </commandParameter>
         <commandParameter
               id="org.openscada.hd.ui.queryTimespec"
               name="Time Spec"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openscada.hd.ui.view.CreateManagedTrendViewHandler"
            commandId="org.openscada.hd.ui.createManagedTrendView">
      </handler>
   </extension>
</plugin>
