<?xml version="1.0"?>

<project name="xmlbeans" default="main" basedir=".">

	<property name="xmlbeans.root" location="../builder_ostc/common/lib/xmlbeans"/>
	
	<taskdef name="xmlbean" classname="org.apache.xmlbeans.impl.tool.XMLBean">
		 <classpath id="xmlbeanspath">
            <pathelement location="${xmlbeans.root}/xbean.jar"/>
            <pathelement location="${xmlbeans.root}/jsr173_1.0_api.jar"/>
         </classpath>
	</taskdef>

	<target name="clean">
		<delete failonerror="false" dir="schemabin"/>
	</target>
	
	<target name="main" depends="clean">
		<xmlbean
			failonerror="true"
			download="false"
			classgendir="schemabin"
			javasource="1.5"
			verbose="true"
            classpathref="xmlbeanspath"
			>
				<fileset dir="schema" includes="*.xsd"/>
        </xmlbean>
  	</target>
  
</project>
