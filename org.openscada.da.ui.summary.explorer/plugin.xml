<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.openscada.da.ui.category"
            class="org.openscada.da.ui.summary.explorer.SummaryExplorerViewPart"
            id="org.openscada.da.ui.summary.explorer.view"
            name="Summary Explorer"
            restorable="false">
         <description>
            Explore summary information.
         </description>
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openscada.da.ui.summary.explorer.OpenExplorerHandler"
            commandId="org.openscada.da.ui.summary.explorer.open">
         <enabledWhen>
            <iterate
                  operator="and">
               <or>
                  <instanceof
                        value="org.openscada.core.connection.provider.ConnectionService">
                  </instanceof>
                  <adapt
                        type="org.openscada.core.connection.provider.ConnectionService">
                  </adapt>
               </or>
               <test
                     property="org.openscada.core.ui.connection.data.ConnectionHolder.interfaceName"
                     value="da">
               </test>
            </iterate>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.openscada.da.ui.summary.explorer.open"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.openscada.da.ui.category"
            id="org.openscada.da.ui.summary.explorer.open"
            name="Show Summary Explorer">
      </command>
   </extension>

</plugin>
