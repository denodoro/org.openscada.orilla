<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.ca.ui.perspectives.PerspectiveFactory"
            id="org.openscada.ca.ui.perspectives.perspective"
            name="CA">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.ca.ui.perspectives.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.ca.ui.perspectives.perspective">
         <view
               closeable="true"
               id="org.openscada.core.ui.connection.ConnectionView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   
	<extension
         point="org.eclipse.ui.views">
      <category
            id="org.openscada.ca.ui.category"
            name="OpenSCADA CA">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.openscada.ca.ui.category"
            name="OpenSCADA CA">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.openscada.ca.ui.category"
            name="OpenSCADA CA">
      </category>
   </extension>

</plugin>
