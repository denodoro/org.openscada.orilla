<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.openscada.ae.ui.connection.navigator.ConnectionContentProvider"
            id="org.openscada.ae.ui.connection.provider"
            labelProvider="org.openscada.ae.ui.connection.navigator.ConnectionLabelProvider"
            name="%navigatorContent.ae.name"
            priority="normal"
            providesSaveables="false">
         <triggerPoints>
            <or>
               <and>
                  <instanceof
                        value="org.openscada.core.ui.connection.data.ConnectionHolder">
                  </instanceof>
                  <test
                        property="org.openscada.core.ui.connection.data.ConnectionHolder.interfaceName"
                        value="ae">
                  </test>
               </and>
               <instanceof
                     value="org.openscada.ae.ui.connection.data.BrowserEntryBean">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.openscada.ae.ui.connection.data.BrowserEntryBean">
               </instanceof>
            </or></possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openscada.ae.ui.connection.commands.AknHandler"
            commandId="org.openscada.ae.ui.connection.command.aknowledge">
            
         <enabledWhen>
               <iterate
                     ifEmpty="true"
                     operator="or">
                  <instanceof
                        value="org.openscada.ae.ui.connection.data.MonitorStatusBean">
                  </instanceof>
                  <adapt
                        type="org.openscada.ae.ui.connection.data.MonitorStatusBean">
                  </adapt>
               </iterate>
            </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.openscada.ae.ui.testing.views.MonitorsView">
         <command
               commandId="org.openscada.ae.ui.connection.command.aknowledge"
               label="%command.akn.label"
               style="push">
               <!--
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
               </iterate>
            </visibleWhen>
            -->
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.openscada.ae.ui.category"
            id="org.openscada.ae.ui.connection.command.aknowledge"
            name="%command.akn.name">
      </command>
      <category
            description="OpenSCADA AE"
            id="org.openscada.ae.ui.category"
            name="AE">
      </category>
   </extension>

</plugin>
