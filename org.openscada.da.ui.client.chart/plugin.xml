<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.openscada.da.ui.category"
            class="org.openscada.da.ui.client.chart.view.ChartView"
            id="org.openscada.da.ui.client.chart.ChartView"
            name="%view.chartView.name"/>
      <view
            allowMultiple="false"
            category="org.openscada.da.ui.category"
            class="org.openscada.da.ui.client.chart.view.ChartControllerView"
            id="org.openscada.da.ui.client.chart.ChartController"
            name="Chart Controller"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.openscada.da.client.chart.oc1"
            objectClass="org.openscada.da.ui.connection.data.DataItemHolder">
         <action
               class="org.openscada.da.ui.client.chart.action.OpenChartAction"
               id="org.openscada.da.client.chart.OpenChartAction"
               label="%action.viewAsChart.label"
               menubarPath="additions"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.openscada.da.client.chart.oc2"
            objectClass="org.openscada.da.ui.widgets.realtime.ListEntry">
         <action
               class="org.openscada.da.ui.client.chart.action.OpenChartAction"
               id="org.openscada.da.client.chart.OpenChartAction"
               label="%action.viewAsChart.label"
               menubarPath="additions"/>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.openscada.da.ui.category"
            id="org.openscada.da.client.chart.commands.OpenCharView"
            name="Open Chart">
      </command>
      <command
            categoryId="org.openscada.da.ui.category"
            id="org.openscada.da.client.chart.commands.OpenParametersCharView"
            name="Open Chart">
         <commandParameter
               id="org.openscada.da.ui.client.chart.connectionId"
               name="Connection Id"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.openscada.da.ui.client.chart.connectionString"
               name="Connection String (Uri)"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.openscada.da.ui.client.chart.itemId"
               name="Item ID"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openscada.da.ui.client.chart.commands.OpenChartView"
            commandId="org.openscada.da.client.chart.commands.OpenCharView">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="org.openscada.da.ui.connection.data.Item">
                     </instanceof>
                     <adapt
                           type="org.openscada.da.ui.connection.data.Item">
                     </adapt>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.openscada.da.ui.client.chart.commands.OpenChartViewWithParameters"
            commandId="org.openscada.da.client.chart.commands.OpenParametersCharView">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.openscada.core.ui.connection.ConnectionView#PopupMenu">
         <command
               commandId="org.openscada.da.client.chart.commands.OpenCharView"
               label="Open Chart View"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <instanceof
                           value="org.openscada.da.ui.connection.data.Item">
                     </instanceof>
                     <adapt
                           type="org.openscada.da.ui.connection.data.Item">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
