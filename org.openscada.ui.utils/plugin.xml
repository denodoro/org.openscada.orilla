<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Open a new view"
            id="org.openscada.ui.utils.showView"
            name="Show View">
         <commandParameter
               id="org.openscada.ui.utils.showView.viewId"
               name="viewId"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.openscada.ui.utils.showView">
         <class
               class="org.openscada.ui.utils.handler.ShowViewHandler">
         </class>
      </handler>
   </extension>

</plugin>
